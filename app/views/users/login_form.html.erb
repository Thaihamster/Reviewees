<head>
  <!-- fontawsomeのコード -->
  <script src="https://kit.fontawesome.com/f0d31dc058.js" crossorigin="anonymous"></script>
  <!-- ログインフォームのCSS -->
  <link href="signin.css" rel="stylesheets">
</head>
<!-- ログインフォームのコード -->
<section class="bg-light page-section" id="team">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">ログイン</h2>
        <h3 class="section-subheading text-muted">ユーザー情報を入力してください</h3>
      </div>
    </div>

    <% if @error_message %>
      <div class="alert alert-primary" role="alert">
        <%= @error_message %>
      </div>
    <% end %>

    <div class="form-signin">
      <%= form_tag("/login") do %>
        <input name="email" class="form-control" value="<%= @email %>" placeholder="メールアドレス">
        <input type="password" name="password" class="form-control" value="<%= @password %>" placeholder="パスワード">
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="サインイン">
      <% end %>
    </div>


  </div>
</section>
