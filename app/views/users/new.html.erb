<head>
  <!-- fontawsomeのコード -->
  <script src="https://kit.fontawesome.com/f0d31dc058.js" crossorigin="anonymous"></script>
</head>
<!-- 新規ユーザー登録のページ -->
<section class="page-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">無料新規登録</h2>
      </div>
    </div>
  </div>

  <%= form_tag("/users/create", {multipart: true}) do %>
  <div class="form">
    <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
        <div class="alert alert-primary" role="alert">
          <%= message %>
        </div>
      <% end %>
      <p class="section-subheading text-muted">ユーザー名
        <input name="name">
      </p>
      <p class="section-subheading text-muted">ユーザー画像
        <input name="image" type="file">
      </p>
      <p class="section-subheading text-muted">メールアドレス
        <input name="email">
      </p>
      <p class="section-subheading text-muted">パスワード
      <input type="password" name="password" value="<%= @user.password %>">
      </p>
      <input type="submit" value="登録">
    </div>
  </div>
  <% end %>
</section>
