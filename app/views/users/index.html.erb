<head>
  <!-- fontawsomeのコード -->
  <script src="https://kit.fontawesome.com/f0d31dc058.js" crossorigin="anonymous"></script>
</head>
<!-- ユーザー一覧ページ -->
<section class="bg-light page-section" id="team">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">ユーザー一覧</h2>
      </div>
    </div>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-sm-4">
          <div class="team-member">
          <a class="portfolio-link" data-toggle="modal" href="/users/<%= user.id %>">
            <img class="mx-auto rounded-circle" src="<%= "/user_images/#{user.image_name}" %>" alt="">
          </a>
            <h4><%= user.name %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
